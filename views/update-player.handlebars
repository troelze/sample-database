<h3>Update {{player.fname}} {{player.lname}}:</h3>

<form id="update-player" action="/players" method="post">
    First name: <input type="text" name="fname" value="{{player.fname}}" required><br>
    Last name: <input type="text" name="lname" value="{{player.lname}}" required><br>
    Team: <select name="teamid"> 
        <option value="{{player.teamid}}">{{player.mascot}}</option>
        {{#each teams}}
        <option value="{{teamid}}">{{mascot}}</option>
        {{/each}}
    </select><br>
	Position: <select name="positionid" > 
        <option value="{{player.positionid}}">{{player.name}}</option>
        {{#each positions}}
        <option value="{{positionid}}">{{name}}</option>
        {{/each}}
    </select><br>
    Jersey #: <input type="number" name="jersey" value="{{player.jersey}}" required><br>
</form><br>
<button onclick="updatePlayer({{player.playerid}})">Update</button>



