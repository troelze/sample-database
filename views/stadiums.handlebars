    </thead> 
    <tbody> 
        {{#each stadiums}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{city}}</td> 
            <td>{{stateUS}}</td> 
            <td class="tdlast"><button class="myButton" onclick="deleteStadium({{stadiumid}})">Delete</button></td>
