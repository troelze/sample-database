<h3>Current Teams:</h3>

    <form id="addTeam" action="/teams" method="post">
	<h3> Add a new team: </h3>
    Mascot: <input type="text" name="mascot" required><br>
    Stadium: <select name="stadiumid"> 
        {{#each stadiums}}
        <option value="{{stadiumid}}">{{name}}</option>
        {{/each}}
    </select><br>
	Division: <select name="divisionid"> 
        {{#each divisions}}
        <option value="{{divisionid}}">{{name}}</option>
        {{/each}}
    </select><br>
    Head Coach: <input type="text" name="headCoach" required></br>
    <input type="submit" value="Submit">
    </form>

<div class="table1">
  
<table>
    <thead> 
        <th>Mascot</th> 
        <th>Stadium</th> 
        <th>Division</th>
        <th>Head Coach</th>  
    </thead> 
    <tbody> 
        {{#each teams}} 
        <tr> 
            <td>{{mascot}}</td> 
            <td>{{stadium}}</td> 
            <td>{{division}}</td> 
            <td>{{headCoach}}</td>
            <td class="tdlast"><button class="myButton" onclick="deleteTeam({{teamid}})">Delete</button></td>
            <td class="tdlast"><a class="myButton2" href="/teams/update-team/{{teamid}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

