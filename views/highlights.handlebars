<h3>Current Highlights:</h3>

<div class="table1">
<table>
    <thead> 
        <th>Title</th> 
    </thead> 
    <tbody> 
        {{#each highlights}} 
        <tr> 
            <td>{{title}}</td> 

            <td class="tdlast"><button class="myButton" onclick="deleteHighlight({{highlightid}})">Delete</button></td>
            <!-- <td><a href="/highlights/{{id}}">Update</a></td> -->
        </tr> 
        {{/each}} 
    </tbody> 

</table><br>

<form id="addHighlight" action="/highlights" method="post">
	<h3> Add a new highlight: </h3>
    Name: <input type="text" name="title"><br>
    
    <input type="submit" value="Submit">
    </form><br>



<table>
    <thead> 
		<th>Name</th>
		<th>Highlight</th>
        <th>Year</th>
    </thead> 
    <tbody> 
        {{#each playerHighlights}} 
        <tr> 
            <td>{{fname}} {{lname}}</td> 
			<td>{{title}}</td>
            <td>{{year}}</td>
            <td class="tdlast"><button class="myButton" onclick="deletePlayerHighlight({{phid}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
	
    
</table><br>

<form id="addPlayerHighlight" action="/highlights/update" method="post">
	<h3> Associate a highlight with a player: </h3>
    Player: <select name="playerid"> 
        {{#each players}}
        <option value="{{playerid}}">{{fname}} {{lname}}</option>
        {{/each}}
    </select><br>
	Highlight: <select name="highlightid"> 
        {{#each highlights}}
        <option value="{{highlightid}}">{{title}}</option>
        {{/each}}
    </select><br>
    Year: <input type="number" name="year" value="2018" required><br>
    
    <input type="submit" value="Submit">
</form>

</div>
